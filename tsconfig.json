{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "types": ["vite/client"],
    "outDir": "dist",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["esnext", "dom"],
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictFunctionTypes": true,
    "alwaysStrict": false,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      // We needed to add this because TypeScript compiler not happy with pnpm symbolic links.
      "@floating-ui/vue": ["./node_modules/@floating-ui/vue/index.d.ts"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "demo/**/*",
    "scripts/**/*",
    "vite.config.ts"
  ],
  "exclude": ["node_modules"]
}
